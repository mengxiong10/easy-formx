{
  "name": "easy-formx",
  "version": "0.4.2",
  "description": "a react form component to replace antd form",
  "author": "mengxiong10",
  "files": [
    "dist",
    "src",
    "typings"
  ],
  "keywords": [
    "React",
    "hooks",
    "form"
  ],
  "license": "MIT",
  "repository": "mengxiong10/easy-formx",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:push": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "css": "node-sass src/index.scss dist/index.css",
    "prebuild": "rimraf dist",
    "build": "npm test && npm run css & rollup -c",
    "dev": "parcel example.html",
    "build:example": "parcel build ./example.html --public-url ./ --out-dir examples/dist --no-source-maps",
    "deploy": "npm run build:example && gh-pages -d examples/dist",
    "format": "prettier --write src/**/* test/**/*",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bash build/git.sh && bash build/release.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>__tests__/setup.ts",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>__tests__/**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "peerDependencies": {
    "lodash": ">=4.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "async-validator": "^1.10.0",
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.120",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/sinon": "^7.0.9",
    "antd": "^3.10.9",
    "conventional-changelog-cli": "^2.0.21",
    "coveralls": "^3.0.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "gh-pages": "^2.0.1",
    "highlight.js": "^10.4.1",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "lodash": "^4.17.15",
    "node-sass": "^4.10.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "1.15.2",
    "prismjs": "^1.15.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.6.3",
    "rimraf": "^2.6.3",
    "rollup": "^0.67.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-tslint": "^0.1.38",
    "rollup-plugin-typescript2": "^0.18.0",
    "sinon": "^7.2.7",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  }
}
